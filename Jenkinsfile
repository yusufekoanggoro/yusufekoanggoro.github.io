    stages {
        stage('Build') {
            steps {
                echo 'Building project...'
                // Misalnya untuk Node.js: sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Misalnya untuk Node.js: sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Tambahkan script deployment di sini
            }
        }
    }
}
